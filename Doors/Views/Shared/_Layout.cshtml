    <div class="container body-content" style="padding:50px;">
        @RenderBody()
        <hr />
        <footer>
            <p><a target="_blank" href="https://github.com/vitaliypetukhov">&copy; 2020 - Vitaliy Petukhou</a></p>
        </footer>
